<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SentryMauiDemo.MainPage"
             Title="Sentry MAUI Demo">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Sentry Custom Instrumentation Demo"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Click the buttons below to trigger custom transactions with Sentry tracing"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to Sentry MAUI demo"
                FontSize="18"
                HorizontalOptions="Center" />

            <!-- Data Operations Section -->
            <Frame BackgroundColor="#2196F3" 
                   Padding="15" 
                   Margin="0,20,0,0"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Data Operations" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    
                    <Button
                        x:Name="FetchDataBtn"
                        Text="Fetch Data (Custom Transaction)"
                        Clicked="OnFetchDataClicked"
                        BackgroundColor="White"
                        TextColor="#2196F3"
                        HorizontalOptions="Fill" />
                    
                    <Button
                        x:Name="ValidateDataBtn"
                        Text="Validate Data (Nested Spans)"
                        Clicked="OnValidateDataClicked"
                        BackgroundColor="White"
                        TextColor="#2196F3"
                        HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Frame>

            <!-- Payment Operations Section -->
            <Frame BackgroundColor="#4CAF50" 
                   Padding="15" 
                   Margin="0,10,0,0"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Payment Operations" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    
                    <Button
                        x:Name="ProcessPaymentBtn"
                        Text="Process Payment"
                        Clicked="OnProcessPaymentClicked"
                        BackgroundColor="White"
                        TextColor="#4CAF50"
                        HorizontalOptions="Fill" />
                    
                    <Button
                        x:Name="GenerateInvoiceBtn"
                        Text="Generate Invoice"
                        Clicked="OnGenerateInvoiceClicked"
                        BackgroundColor="White"
                        TextColor="#4CAF50"
                        HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Frame>

            <!-- Database Operations Section -->
            <Frame BackgroundColor="#9C27B0" 
                   Padding="15" 
                   Margin="0,10,0,0"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Database Operations (Deep Nesting)" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    
                    <Button
                        x:Name="ComplexQueryBtn"
                        Text="Complex DB Query (4 Levels Deep)"
                        Clicked="OnComplexQueryClicked"
                        BackgroundColor="White"
                        TextColor="#9C27B0"
                        HorizontalOptions="Fill" />
                    
                    <Button
                        x:Name="BatchInsertBtn"
                        Text="Batch Insert (Dynamic Spans)"
                        Clicked="OnBatchInsertClicked"
                        BackgroundColor="White"
                        TextColor="#9C27B0"
                        HorizontalOptions="Fill" />
                    
                    <Button
                        x:Name="OptimizeDatabaseBtn"
                        Text="Database Optimization"
                        Clicked="OnOptimizeDatabaseClicked"
                        BackgroundColor="White"
                        TextColor="#9C27B0"
                        HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Frame>

            <!-- File Processing Section -->
            <Frame BackgroundColor="#FF9800" 
                   Padding="15" 
                   Margin="0,10,0,0"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="File Processing (5 Levels Deep)" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    
                    <Button
                        x:Name="ProcessFileBtn"
                        Text="Process Large File Pipeline"
                        Clicked="OnProcessFileClicked"
                        BackgroundColor="White"
                        TextColor="#FF9800"
                        HorizontalOptions="Fill" />
                    
                    <Button
                        x:Name="CloudSyncBtn"
                        Text="Cloud File Sync (Parallel)"
                        Clicked="OnCloudSyncClicked"
                        BackgroundColor="White"
                        TextColor="#FF9800"
                        HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Frame>

            <!-- Error Testing Section -->
            <Frame BackgroundColor="#FF5722" 
                   Padding="15" 
                   Margin="0,10,0,0"
                   CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Advanced Testing" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    
                    <Button
                        x:Name="ThrowErrorBtn"
                        Text="Throw Test Exception"
                        Clicked="OnThrowErrorClicked"
                        BackgroundColor="White"
                        TextColor="#FF5722"
                        HorizontalOptions="Fill" />
                    
                    <Button
                        x:Name="ComplexTransactionBtn"
                        Text="Complex Multi-Span Transaction"
                        Clicked="OnComplexTransactionClicked"
                        BackgroundColor="White"
                        TextColor="#FF5722"
                        HorizontalOptions="Fill" />
                </VerticalStackLayout>
            </Frame>

            <!-- Status Label -->
            <Label
                x:Name="StatusLabel"
                Text="Ready"
                FontSize="16"
                HorizontalOptions="Center"
                Margin="0,20,0,0"
                TextColor="#666" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

